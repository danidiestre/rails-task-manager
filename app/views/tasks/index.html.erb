

<div class="container">
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task) %>
      <% if task.completed %>
        <input type="checkbox" checked>
        <%= link_to "Delete ",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>      
      <% else %>
        <input type="checkbox">
        <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>      
      <% end %>
    <% end %></li>
  </ul>

  <%= link_to 'Add a new task!', tasks_new_path%>
